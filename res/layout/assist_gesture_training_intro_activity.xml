<com.google.android.setupdesign.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:icon="@drawable/ic_assist_gesture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:sucHeaderText="@string/assist_gesture_training_intro_title">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SudContentFrame">

        <TextView
            android:id="@+id/sud_layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assist_gesture_training_intro_text"
            style="@style/SudDescription.Glif"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/assist_gesture_training_illustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include layout="@layout/assist_gesture_illustration"/>
        </FrameLayout>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</com.google.android.setupdesign.GlifLayout>
